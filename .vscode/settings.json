{
  "editor.formatOnSave": true,
  "prettier.requireConfig": true,
  "prettier.trailingComma": "es5",
  "better-comments.multilineComments": true,
  "jest.showCoverageOnLoad": true,
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF2D00",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "FIXME",
      "color": "#FF2D00",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "?",
      "color": "#3498DB",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "//",
      "color": "#474747",
      "strikethrough": true,
      "backgroundColor": "transparent"
    },
    {
      "tag": "todo",
      "color": "#FF8C00",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "*",
      "color": "#98C379",
      "strikethrough": false,
      "backgroundColor": "transparent"
    }
  ],
  "todo-tree.regex": "((//|#|\\*|<!--|;|/\\*|^)\\s*($TAGS)|^\\s*- \\[ \\])",
  "todo-tree.customHighlight": {
    "TODO": {
      "icon": "checklist",
      "iconColour": "green"

      //"type": "line"
    },
    "FIXME": {
      "icon": "flame",
      "iconColour": "orange"
    }
  }
}
